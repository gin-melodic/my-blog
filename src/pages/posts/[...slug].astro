---
// src/pages/posts/[...slug].astro
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const allPosts = await getCollection('blog');
  return allPosts.map((post: CollectionEntry<'blog'>) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post }: { post: CollectionEntry<'blog'> } = Astro.props;
const { Content } = await post.render();
---
<BaseLayout title={post.data.title} description={post.data.description}>
  <article class="prose prose-lg lg:prose-xl max-w-none text-white bg-white/50 p-8 rounded-lg backdrop-blur-md border border-gray-200">
    <h1 class="text-5xl font-black mb-4">{post.data.title}</h1>
    <p class="text-gray-100 mb-8">
      Published on <time datetime={post.data.pubDate.toISOString()}>
        {new Date(post.data.pubDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
      </time>
    </p>

    <Content />
  </article>
</BaseLayout>