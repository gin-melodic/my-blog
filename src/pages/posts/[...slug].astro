---
// src/pages/posts/[...slug].astro
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import GiscusComments from '../../components/GiscusComments.astro';

export async function getStaticPaths() {
  const allPosts = await getCollection('blog');
  return allPosts.map((post: CollectionEntry<'blog'>) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post }: { post: CollectionEntry<'blog'> } = Astro.props;

// Generate canonical URL for the post
const canonicalUrl = `https://antinomy.me/posts/${post.slug}/`;

// Format publish date for SEO
const publishDate = post.data.pubDate instanceof Date 
  ? post.data.pubDate.toISOString() 
  : new Date(post.data.pubDate).toISOString();
  
// Render the post content with components
const { Content } = await post.render();
---

<BaseLayout 
  title={post.data.title} 
  description={post.data.description}
  canonical={canonicalUrl}
>
  <article class="prose prose-lg lg:prose-xl max-w-none text-white bg-white/20 p-8 rounded-lg backdrop-blur-md border border-gray-200">
    <header>
      <h1 class="text-5xl font-black mb-4">{post.data.title}</h1>
      <p class="text-gray-100 mb-8">
        Published on <time datetime={publishDate}>
          {post.data.pubDate instanceof Date 
            ? post.data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })
            : new Date(post.data.pubDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
        </time>
      </p>
    </header>

    <Content />
  </article>
  <GiscusComments />
</BaseLayout>
