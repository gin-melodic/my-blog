---
// src/layouts/BaseLayout.astro
import '../styles/global.css'
import '../styles/katex.css'
import '../styles/mermaid.css'
import BauhausCanvas from '../components/BauhausCanvas.astro';
export interface Props {
  title: string;
  description: string;
  canonical?: string;
  ogImage?: string;
}

const { title, description, canonical, ogImage } = Astro.props;

const siteTitle = "MELODIC-GIN'S BLOG";
const fullTitle = title === siteTitle ? title : `${title} | ${siteTitle}`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{fullTitle}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content="AI, Full-Stack, Developer, Agent Architect, Blog, Technology, Programming" />
    <meta name="author" content="MELODIC-GIN" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonical || "https://antinomy.me"} />
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonical || "https://antinomy.me"} />
    {ogImage && <meta property="og:image" content={ogImage} />}
    
    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    {ogImage && <meta name="twitter:image" content={ogImage} />}
    
    <!-- KaTeX CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.8/dist/katex.min.css" integrity="sha384-GvrOXuhMATgEsSwCs4smul74iXGOixntILdUW9XmUC6+HX0sLNAK3q71HotJqlAn" crossorigin="anonymous">
    
    <!-- Mermaid JS -->
    <script type="module">
      import mermaid from 'https://cdn.jsdelivr.net/npm/mermaid@10/dist/mermaid.esm.min.mjs';
      mermaid.initialize({ 
        startOnLoad: true,
        theme: 'base',
        themeVariables: {
          primaryColor: '#00000070',
          primaryBorderColor: '#00FFFF',
          primaryTextColor: '#FFFFFF',
          secondaryColor: '#FF00FF',
          secondaryBorderColor: '#FF00FF',
          secondaryTextColor: '#FFFFFF',
          tertiaryColor: '#FFFF00',
          tertiaryBorderColor: '#FFFF00',
          tertiaryTextColor: '#FFFFFF',
          noteTextColor: '#FFFFFF',
          lineColor: '#FF00FF',
          textColor: '#FFFFFF',
          mainBkg: '#00000070',
          secondBkg: '#00000070',
          altBackground: '#00000070',
          fontFamily: 'Montserrat'
        }
      });
      document.addEventListener('DOMContentLoaded', () => {
        mermaid.run();
      });
    </script>
  </head>
  <body class="bg-bauhaus-bg text-bauhaus-dark font-sans min-h-screen flex flex-col">
    <BauhausCanvas />
    <header class="fixed top-0 left-0 w-full p-4 z-10 bg-bauhaus-bg/80 backdrop-blur-sm text-white">
      <nav class="container mx-auto flex justify-between items-center">
        <a href="/" class="text-2xl font-black tracking-tighter">MELODIC-GIN'S BLOG</a>
        <div class="space-x-4">
          <a href="/posts" class="hover:text-bauhaus-blue transition-colors">Posts</a>
          <a href="/about" class="hover:text-bauhaus-blue transition-colors">About</a>
        </div>
      </nav>
    </header>

    <main class="container mx-auto p-4 pt-24 flex-grow">
      <slot /> <!-- Child page content will be rendered here -->
    </main>
    
    <footer class="text-center p-8 text-gray-100 mb-9">
      <p>&copy; {new Date().getFullYear()} MELODIC-GIN. All rights reserved.</p>
    </footer>
  </body>
</html>